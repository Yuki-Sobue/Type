<%@articles.each do |article|%>
  <div class="article">
    <div class="text_box">
      <div class="button_list">
        <%=link_to 'detail', "/articles/#{article.id}",class: "button"%>
        <%if user_signed_in? && article.user_id == current_user.id%>
          <%=link_to 'rewrite', "/articles/#{article.id}/edit", method: :get ,class: "button"%>
          <%=link_to 'trush', "/articles/#{article.id}", method: :delete ,class: "button"%>
        <%end%>
        <h1 class="article_title">
          <%=article.title%>
        <h1>
      </div>
    </div>
  </div>
<%end%>

  <%= paginate(@articles) %>

